/*****************************************************************
Funciones Stylus Globales reutilizables
*****************************************************************/
_border-radius(){
  -webkit-border-radius: arguments;
  -moz-border-radius: arguments;
  -ms-border-radius: arguments;
  -o-border-radius: arguments;
  -pie-border-radius: arguments;
  border-radius: arguments;
  // behavior: url(/poligloto/public/assets/css/PIE/PIE.php);
}

_transition(){
  -webkit-transition: arguments;
  -moz-transition: arguments;
  -ms-transition: arguments;
  -o-transition: arguments;
  transition: arguments;
}

_box-shadow(){
  -webkit-box-shadow: arguments;
  box-shadow: arguments;
}

_bg-linear-gradient(){
  background: -webkit-linear-gradient(arguments);
  background: -moz-linear-gradient(arguments);
  background: -ms-linear-gradient(arguments);
  background: -o-linear-gradient(arguments);
  background: linear-gradient(arguments);
  // -pie-background: linear-gradient(arguments);
  // behavior: url(/poligloto/public/assets/css/PIE/PIE.php);
}

_bg-linear-gradient-default(color1 color2){
  background: -webkit-linear-gradient(color1 10%, color2 100%);
  background: -moz-linear-gradient(color1 10%, color2 100%);
  background: -ms-linear-gradient(color1 10%, color2 100%);
  background: -o-linear-gradient(color1 10%, color2 100%);
  background: linear-gradient(color1 10%, color2 100%);
  // -pie-background: linear-gradient(color1, color2);
  // behavior: url(/poligloto/public/assets/css/PIE/PIE.php);
}

_font(nombre source){
  font-family: nombre
  src: url(source + '.eot?95891178')
  src: url(source + '.eot?95891178#iefix') format('embedded-opentype'),
       url(source + '.woff?95891178') format('woff'),
       url(source + '.ttf?95891178') format('truetype'),
       url(source + '.svg?95891178#iconos' + nombre) format('svg');
  font-weight: normal;
  font-style: normal;
}

_bg-size-and-position(w h x y){
  background-position: x y;
  width: w;
  height: h;
}

_center(){
  margin-left: auto;
  margin-right: auto;
}

.center{
  _center();
}

_inline-block(){
  display: inline-block;
  zoom: 1;
  *display: inline;
}
    
.inline-block{
  _display-inline-block();
}

_position-absolute(){
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.position-absolute{
  _position-absolute();
}

_scrollable(){
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  /* Activa el scroll nativo de iOS */
}

.scrollable{
  _scrollable();
}

/*****************************************************************
Globales reutilizables
*****************************************************************/

body{
  -webkit-text-size-adjust:none;
}

img,a{
  border: none;
}
.display-table{
  display: table;
  width: 100%;
  height: 100%;
}

.display-table-cell{
  display: table-cell;
  width: 100%;
}

.vertical-align-middle{
  vertical-align: middle;
}

.truncar-linea{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

select{
  appearance:none;
  -moz-appearance:none; /* Firefox */
  -webkit-appearance:none; /* Safari and Chrome */
}

html,body{
  margin: 0;
  padding: 0;
  height: 100%;
  position: relative;
}

body{
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  font-size: 14px;
}
